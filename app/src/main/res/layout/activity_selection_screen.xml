<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectionScreenActivity">

    <Button
        android:id="@+id/postsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="133dp"
        android:layout_marginBottom="135dp"
        android:onClick="menuToPostsButton"
        android:text="Posts"
        app:layout_constraintBottom_toBottomOf="@+id/toDoButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/toDoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="menuToToDosButton"
        android:text="ToDos"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/postsButton"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/albumButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:onClick="menuToAlbumsButton"
        android:text="Album"
        app:layout_constraintStart_toStartOf="@+id/toDoButton"
        app:layout_constraintTop_toBottomOf="@+id/toDoButton" />
</androidx.constraintlayout.widget.ConstraintLayout>