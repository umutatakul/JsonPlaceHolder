<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp">

    <TextView
        android:textStyle="bold"
        android:id="@+id/commentsNameText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=" Comments Name Test"
        android:textColor="#212529"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    </TextView>

    <TextView
        android:textStyle="italic"
        android:id="@+id/commentsEmailText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Comments Email Test"
        android:textColor="#212529"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/commentsNameText"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/commentsNameText"
        app:layout_constraintTop_toBottomOf="@+id/commentsNameText">


    </TextView>

    <TextView
        android:id="@+id/commentsBodyText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Comments Body Test"
        android:textColor="#212529"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/commentsEmailText"
        app:layout_constraintStart_toStartOf="@+id/commentsEmailText"
        app:layout_constraintTop_toBottomOf="@+id/commentsEmailText">


    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>