<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/postIdText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=" Post Id Test"
        android:textColor="#212529"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="142dp"
        tools:layout_editor_absoluteY="-4dp">


    </TextView>

    <TextView
        android:id="@+id/postTitleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Name Test"
        android:textColor="#212529"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/postIdText"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/postIdText"
        app:layout_constraintTop_toBottomOf="@+id/postIdText">


    </TextView>

    <TextView
        android:id="@+id/postBodyText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Post Body Test \nPost Body Test\nPost Body Test\nPost Body Test\nPost Body Test\nPost Body Test\nPost Body Test\nPost Body Test\nPost Body Test\nPost Body Test"
        android:textColor="#212529"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/postTitleText"
        app:layout_constraintStart_toStartOf="@+id/postTitleText"
        app:layout_constraintTop_toBottomOf="@+id/postTitleText"
        tools:layout_editor_absoluteY="61dp">


    </TextView>


</androidx.constraintlayout.widget.ConstraintLayout>