<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="vertical"
    android:background="@drawable/text_frame"
    android:layout_margin="5dp">


    <TextView
        android:id="@+id/photosTitleText"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="Title Test"
        android:textAlignment="center"
        android:textColor="#212529"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/photosThumbnailImage"
        app:layout_constraintTop_toTopOf="parent">


    </TextView>

    <ImageView
        android:id="@+id/photosThumbnailImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:layout_marginEnd="1dp"
        android:foregroundGravity="center"
        android:text="Completed Test"
        android:textAlignment="center"
        android:textColor="#212529"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/photosTitleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    </ImageView>


</androidx.constraintlayout.widget.ConstraintLayout>