<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/todosUserIdText"
        android:layout_width="280dp"
        android:layout_height="0dp"
        android:text="Id Test"
        android:textAlignment="center"
        android:textColor="#212529"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/photosTitleText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    </TextView>

    <TextView
        android:id="@+id/photosTitleText"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:text="Title Test"
        android:textAlignment="center"
        android:textColor="#212529"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/photosThumbnailImage"
        app:layout_constraintTop_toBottomOf="@+id/todosUserIdText">


    </TextView>

    <ImageView
        android:id="@+id/photosThumbnailImage"
        android:layout_width="122dp"
        android:layout_height="116dp"
        android:layout_marginEnd="1dp"
        android:text="Completed Test"
        android:textAlignment="center"
        android:textColor="#212529"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/todosUserIdText"
        app:layout_constraintEnd_toStartOf="@+id/photosTitleText"
        app:layout_constraintStart_toStartOf="parent">


    </ImageView>


</androidx.constraintlayout.widget.ConstraintLayout>